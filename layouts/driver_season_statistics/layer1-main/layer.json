{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Width" : "*",
        "Items": [
            {
                "BlockType" : "component",
                "ComponentName" : "header_block",
                "ComponentOptions" : {
                    "Vars" : {
                        "headerlefttext" : "{Season.LeagueInfo.LeagueShortName} Â· {Season.Name}"
                    }
                }
            },
            {
                "BlockType": "text",
                "Source": "{Statistics.Header}",                            
                "MarginTop" : "{MarginTopHeaderText}",
                "HorizontalAlignment" : "Center",
                "VerticalAlignment": "Center",
                "Width" : "700",
                "TextOptions" : {
                    "FontSize" : 25,
                    "HorizontalAlignment" : "Center",
                    "FontName": "{MgEB}",
                    "Foreground": "{ForegroundRed}"
                },
                "Triggers" : [
                    {
                        "Condition" : "{Metadata.RenderDataType, Converter=StringEquals, Parameter=PenTimeAllAvg}",
                        "Property" : "Width",
                        "Value" : "700"
                    }
                ]
                
            },
            {
                "BlockType" : "component",
                "ComponentName" : "separator"
            },
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "0,0,0,0",
                "Padding" : "30,0,30,0",
                "WidthStretch" : true,
                "TableOptions": {
                    "ItemsSource": "{Statistics.Drivers}",
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern": "tableHeader"
                    },
                    "Columns": [
                        {
                            "Header": "",
                            "WidthStretch": false,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "position_cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "position": "{Item.Position}"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "",
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_cell"
                            }
                        },
                        {
                            "Header": "{Statistics.Column0.Header}",
                            "IsSeparator": "{Statistics.Column0.Type, Converter=EnumEquals, Parameter=Separator}",
                            "GroupId": "{Statistics.Column0.GroupId}",
                            "WidthStretch": false,
                            "MarginLeft": 8,
                            "Template": {
                                "BlockType": "component",
                                "Name": "statist",
                                "ComponentOptions": {
                                    "ComponentName": "statistics_cell",
                                    "Vars": {
                                        "data": "Item.Value0"
                                    }
                                }
                            }
                        },
                        {
