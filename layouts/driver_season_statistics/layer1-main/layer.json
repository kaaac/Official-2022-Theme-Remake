            {
                "BlockType": "text",
                "Foreground": "{ForeGroundWhite}",
                "Padding" : "10,10,10,0",
                "Source": "* - the series continues",
                "RenderIf" : "false",
                "HorizontalAlignment": "Center",
                "TextOptions": {
                    "FontSize": 15,
